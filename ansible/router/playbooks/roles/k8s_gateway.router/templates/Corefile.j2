(common) {
  errors
  log
  reload
  loadbalance
  cache
  loop
  local
  prometheus 172.16.0.254:9153
}

(localhostz) {
  # dnsmasq is only enabled for setting hostnames in opnsense
  hosts /var/etc/dnsmasq-hosts {
    ttl 1
    reload 5s
    fallthrough
  }
}

(k8s_gatewayz) {
  forward . 192.168.69.108:53
}

. {
  import common
  import localhostz
  forward . tls://45.90.28.208 tls://45.90.30.208 {
    tls_servername router-65f7c6.dns.nextdns.io
  }
  health {
    lameduck 5s
  }
}

falhalla.com {
  import common
  import localhostz
  import k8s_gatewayz
}

intra.falhalla.com {
  import common
  import localhostz
  import k8s_gatewayz
}
